{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cocoa Rave",
  "version": "1.1.0",
  "identifier": "com.cocoarave.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Cocoa Rave - Chocolate Store & Snake Game",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2025 Cocoa Rave",
    "category": "Lifestyle",
    "shortDescription": "Premium chocolate store with Snake game and data visualization",
    "longDescription": "Cocoa Rave is a premium chocolate storefront featuring a fun Snake game and interactive police data visualization. Built with React, Vite, and Tauri."
  }
}